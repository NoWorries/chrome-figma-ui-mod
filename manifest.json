{
  "name": "Figma UI Mod",
  "description": "Figma UI enhancements and Analytics CSV export",
  "version": "1.0.2",
  "manifest_version": 3,
  "action": {
    "default_title": "Figma enhance",
    "default_popup": "popup.html"
  }, 
  "host_permissions": [
    "https://*.figma.com/file/*",
    "https://*.figma.com/files/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.figma.com/file/*",
        "https://*.figma.com/files/*",
        "https://*.figma.com/design/*"
      ],
      "js": ["background.js"]
    }
  ],
  "permissions": ["scripting", "activeTab"],
  "icons": {
    "16": "favicon_16.png",
    "32": "favicon_32.png",
    "48": "favicon_48.png",
    "128": "favicon_128.png"
  }
}
